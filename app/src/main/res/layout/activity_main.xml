<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 메인 화면의 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 툴바 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/actionGreen"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:navigationIcon="@drawable/menu" />

        <!-- 그리드 레이아웃: 각 오염 유형 버튼 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_margin="16dp">

            <!-- 대기 오염 버튼 -->
            <TextView
                android:id="@+id/air_pollution"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@android:color/holo_green_light"
                android:gravity="center"
                android:onClick="onPartitionClick"
                android:padding="16dp"
                android:text="대기 오염"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <!-- 수질 오염 버튼 -->
            <TextView
                android:id="@+id/water_pollution"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:onClick="onPartitionClick"
                android:padding="16dp"
                android:text="수질 오염"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <!-- 토양 오염 버튼 -->
            <TextView
                android:id="@+id/soil_pollution"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@android:color/holo_orange_light"
                android:gravity="center"
                android:onClick="onPartitionClick"
                android:padding="16dp"
                android:text="토양 오염"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <!-- 플라스틱 오염 버튼 -->
            <TextView
                android:id="@+id/plastic_pollution"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@android:color/holo_purple"
                android:gravity="center"
                android:onClick="onPartitionClick"
                android:padding="16dp"
                android:text="플라스틱 오염"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </GridLayout>

        <!-- 커뮤니티 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 커뮤니티 헤더 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="커뮤니티"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="더 보기 >"
                    android:textColor="@android:color/holo_blue_dark"
                    android:onClick="onMoreClick" />
            </LinearLayout>

            <!-- 게시판 리스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner_background"
                android:padding="8dp">

                <!-- 게시판 항목 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="오늘의 이슈"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘의 이슈 최신 글 제목 미리보기"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <!-- 게시판 항목 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="자유 게시판"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자유 게시판 최신 글 제목 미리보기"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <!-- 게시판 항목 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="공지사항"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공지사항 최신 글 제목 미리보기"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <!-- 게시판 항목 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Q &amp; A 게시판"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Q &amp; A 게시판 최신 글 제목 미리보기"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- 하단 네비게이션 -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_nav_menu" />

    </LinearLayout>

    <!-- 네비게이션 드로어 메뉴 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>